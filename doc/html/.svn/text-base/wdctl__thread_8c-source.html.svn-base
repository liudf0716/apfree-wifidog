<a name="l00144"></a>00144 <span class="keyword">static</span> <span class="keywordtype">void</span> *
<a name="l00145"></a>00145 thread_wdctl_handler(<span class="keywordtype">void</span> *arg)
<a name="l00146"></a>00146 {
<a name="l00147"></a>00147         <span class="keywordtype">int</span>     fd,
<a name="l00148"></a>00148                 done,
<a name="l00149"></a>00149                 i;
