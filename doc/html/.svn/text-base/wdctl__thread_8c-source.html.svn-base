<a name="l00185"></a>00185                 <a class="code" href="wdctl__thread_8c.html#e95b8ccbd6c9d361d465a1619ab16733">wdctl_stop</a>(fd);
<a name="l00186"></a>00186         } <span class="keywordflow">else</span> <span class="keywordflow">if</span> (strncmp(request, <span class="stringliteral">"reset"</span>, 5) == 0) {
<a name="l00187"></a>00187                 wdctl_reset(fd, (request + 6));
<a name="l00188"></a>00188         } <span class="keywordflow">else</span> <span class="keywordflow">if</span> (strncmp(request, <span class="stringliteral">"restart"</span>, 7) == 0) {
